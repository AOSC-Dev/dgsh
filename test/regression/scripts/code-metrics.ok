</dev/null  find "$@" \( -name \*.c -or -name \*.h \) -type f -print0 |
sgsh-tee  $SGDIR/npi-1.0.0 $SGDIR/npi-1.1.0 &
 <$SGDIR/npi-1.0.0 tr \\0 \\n |
		# Remove path
		sed 's|^.*/||' |
		# Maintain average
		awk '{s += length($1); n++} END {print s / n}' | sgsh-writeval $SGDIR/FNAMELEN &
 <$SGDIR/npi-1.1.0 xargs -0 cat |
sgsh-tee  $SGDIR/npi-2.0.0 $SGDIR/npi-2.1.0 $SGDIR/npi-2.2.0 $SGDIR/npi-2.3.0 $SGDIR/npi-2.4.0 &
 <$SGDIR/npi-2.0.0 sed 's/#/@/g;s/\\[\\"'\'']/@/g;s/"[^"]*"/""/g;'"s/'[^']*'/''/g" |
			cpp -P 2>/dev/null |
sgsh-tee  $SGDIR/npi-3.0.0 $SGDIR/npi-3.1.0 $SGDIR/npi-3.2.0 $SGDIR/npi-3.3.0 $SGDIR/npi-3.4.0 &
 <$SGDIR/npi-3.0.0  egrep -c 'struct[ 	]*{|struct[ 	]*[a-zA-Z_][a-zA-Z0-9_]*[       ]*{' | sgsh-writeval $SGDIR/NSTRUCT &
 <$SGDIR/npi-3.1.0 grep -cw typedef | sgsh-writeval $SGDIR/NTYPEDEF &
 <$SGDIR/npi-3.2.0 grep -cw void | sgsh-writeval $SGDIR/NVOID &
 <$SGDIR/npi-3.3.0 grep -cw gets | sgsh-writeval $SGDIR/NGETS &
 <$SGDIR/npi-3.4.0 tr -cs 'A-Za-z0-9_' '\n' |
				sort -u |
				awk '/^[A-Za-z]/ { len += length($1); n++ } END {print len / n}' | sgsh-writeval $SGDIR/IDLEN &
 <$SGDIR/npi-2.1.0 wc -lc | awk '{OFS=":"; print $1, $2}' | sgsh-writeval $SGDIR/CHLINESCHAR &
 <$SGDIR/npi-2.2.0 sed 's/#/@/g' |
			cpp -traditional -P 2>/dev/null |
			wc -c |
			awk '{OFMT = "%.0f"; print $1/1000}' | sgsh-writeval $SGDIR/NCCHAR &
 <$SGDIR/npi-2.3.0 egrep -c '/\*|//' | sgsh-writeval $SGDIR/NCOMMENT &
 <$SGDIR/npi-2.4.0 grep -ci copyright | sgsh-writeval $SGDIR/NCOPYRIGHT &
</dev/null  find "$@" -name \*.c -type f -print0 |
sgsh-tee  $SGDIR/npi-4.0.0 $SGDIR/npi-4.1.0 &
 <$SGDIR/npi-4.0.0 tr \\0 \\n |
sgsh-tee  $SGDIR/npi-5.0.0 $SGDIR/npi-5.1.0 &
 <$SGDIR/npi-5.0.0 wc -l | sgsh-writeval $SGDIR/NCFILE &
 <$SGDIR/npi-5.1.0 sed 's,/[^/]*$,,;s,^.*/,,' | sort -u | wc -l | sgsh-writeval $SGDIR/NCDIR &
 <$SGDIR/npi-4.1.0 xargs -0 cat |
sgsh-tee  $SGDIR/npi-6.0.0 $SGDIR/npi-6.1.0 &
 <$SGDIR/npi-6.0.0 wc -lc | awk '{OFS=":"; print $1, $2}' | sgsh-writeval $SGDIR/CLINESCHAR &
 <$SGDIR/npi-6.1.0 sed 's/#/@/g;s/\\[\\"'\'']/@/g;s/"[^"]*"/""/g;'"s/'[^']*'/''/g" |
			cpp -P 2>/dev/null |
sgsh-tee  $SGDIR/npi-7.0.0 $SGDIR/npi-7.1.0 $SGDIR/npi-7.2.0 $SGDIR/npi-7.3.0 $SGDIR/npi-7.4.0 $SGDIR/npi-7.5.0 &
 <$SGDIR/npi-7.0.0 grep -c '^{' | sgsh-writeval $SGDIR/NFUNCTION &
 <$SGDIR/npi-7.1.0 grep -cw goto | sgsh-writeval $SGDIR/NGOTO &
 <$SGDIR/npi-7.2.0 grep -cw register | sgsh-writeval $SGDIR/NREGISTER &
 <$SGDIR/npi-7.3.0 grep -c '@[ 	]*define[ 	][ 	]*[a-zA-Z_][a-zA-Z0-9_]*(' | sgsh-writeval $SGDIR/NMACRO &
 <$SGDIR/npi-7.4.0 grep -c '@[ 	]*include' | sgsh-writeval $SGDIR/NINCLUDE &
 <$SGDIR/npi-7.5.0 grep -w  -o '[0-9][x0-9][0-9a-f]*' | wc -l | sgsh-writeval $SGDIR/NCONST &
</dev/null  find "$@" -name \*.h -type f | wc -l | sgsh-writeval $SGDIR/NHFILE &
# Gather the results
cat <<EOF
FNAMELEN: `sgsh-readval $SGDIR/FNAMELEN`

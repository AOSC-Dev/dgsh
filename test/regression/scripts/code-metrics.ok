#  WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.
#  See the License for the specific language governing permissions and
#  limitations under the License.
#

</dev/null  find "$@" \( -name \*.c -or -name \*.h \) -type f -print0 |
sgsh-tee  $SGDIR/npi-1.0.0 $SGDIR/npi-1.1.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-1.0.0 tr \\0 \\n |
		# Remove path
		sed 's|^.*/||' |
		# Maintain average
		awk '{s += length($1); n++} END {print s / n}' | sgsh-writeval  -s $SGDIR/FNAMELEN & SGPID="$! $SGPID"
 <$SGDIR/npi-1.1.0 xargs -0 cat |
sgsh-tee  $SGDIR/npi-2.0.0 $SGDIR/npi-2.1.0 $SGDIR/npi-2.2.0 $SGDIR/npi-2.3.0 $SGDIR/npi-2.4.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-2.0.0 sed 's/#/@/g;s/\\[\\"'\'']/@/g;s/"[^"]*"/""/g;'"s/'[^']*'/''/g" |
			cpp -P 2>/dev/null |
sgsh-tee  $SGDIR/npi-3.0.0 $SGDIR/npi-3.1.0 $SGDIR/npi-3.2.0 $SGDIR/npi-3.3.0 $SGDIR/npi-3.4.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-3.0.0  egrep -c 'struct[ 	]*{|struct[ 	]*[a-zA-Z_][a-zA-Z0-9_]*[       ]*{' | sgsh-writeval  -s $SGDIR/NSTRUCT & SGPID="$! $SGPID"
 <$SGDIR/npi-3.1.0 grep -cw typedef | sgsh-writeval  -s $SGDIR/NTYPEDEF & SGPID="$! $SGPID"
 <$SGDIR/npi-3.2.0 grep -cw void | sgsh-writeval  -s $SGDIR/NVOID & SGPID="$! $SGPID"
 <$SGDIR/npi-3.3.0 grep -cw gets | sgsh-writeval  -s $SGDIR/NGETS & SGPID="$! $SGPID"
 <$SGDIR/npi-3.4.0 tr -cs 'A-Za-z0-9_' '\n' |
				sort -u |
				awk '/^[A-Za-z]/ { len += length($1); n++ } END {print len / n}' | sgsh-writeval  -s $SGDIR/IDLEN & SGPID="$! $SGPID"
 <$SGDIR/npi-2.1.0 wc -lc | awk '{OFS=":"; print $1, $2}' | sgsh-writeval  -s $SGDIR/CHLINESCHAR & SGPID="$! $SGPID"
 <$SGDIR/npi-2.2.0 sed 's/#/@/g' |
			cpp -traditional -P 2>/dev/null |
			wc -c |
			awk '{OFMT = "%.0f"; print $1/1000}' | sgsh-writeval  -s $SGDIR/NCCHAR & SGPID="$! $SGPID"
 <$SGDIR/npi-2.3.0 egrep -c '/\*|//' | sgsh-writeval  -s $SGDIR/NCOMMENT & SGPID="$! $SGPID"
 <$SGDIR/npi-2.4.0 grep -ci copyright | sgsh-writeval  -s $SGDIR/NCOPYRIGHT & SGPID="$! $SGPID"
</dev/null  find "$@" -name \*.c -type f -print0 |
sgsh-tee  $SGDIR/npi-4.0.0 $SGDIR/npi-4.1.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-4.0.0 tr \\0 \\n |
sgsh-tee  $SGDIR/npi-5.0.0 $SGDIR/npi-5.1.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-5.0.0 wc -l | sgsh-writeval  -s $SGDIR/NCFILE & SGPID="$! $SGPID"
 <$SGDIR/npi-5.1.0 sed 's,/[^/]*$,,;s,^.*/,,' | sort -u | wc -l | sgsh-writeval  -s $SGDIR/NCDIR & SGPID="$! $SGPID"
 <$SGDIR/npi-4.1.0 xargs -0 cat |
sgsh-tee  $SGDIR/npi-6.0.0 $SGDIR/npi-6.1.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-6.0.0 wc -lc | awk '{OFS=":"; print $1, $2}' | sgsh-writeval  -s $SGDIR/CLINESCHAR & SGPID="$! $SGPID"
 <$SGDIR/npi-6.1.0 sed 's/#/@/g;s/\\[\\"'\'']/@/g;s/"[^"]*"/""/g;'"s/'[^']*'/''/g" |
			cpp -P 2>/dev/null |
sgsh-tee  $SGDIR/npi-7.0.0 $SGDIR/npi-7.1.0 $SGDIR/npi-7.2.0 $SGDIR/npi-7.3.0 $SGDIR/npi-7.4.0 $SGDIR/npi-7.5.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-7.0.0 grep -c '^{' | sgsh-writeval  -s $SGDIR/NFUNCTION & SGPID="$! $SGPID"
 <$SGDIR/npi-7.1.0 grep -cw goto | sgsh-writeval  -s $SGDIR/NGOTO & SGPID="$! $SGPID"
 <$SGDIR/npi-7.2.0 grep -cw register | sgsh-writeval  -s $SGDIR/NREGISTER & SGPID="$! $SGPID"
 <$SGDIR/npi-7.3.0 grep -c '@[ 	]*define[ 	][ 	]*[a-zA-Z_][a-zA-Z0-9_]*(' | sgsh-writeval  -s $SGDIR/NMACRO & SGPID="$! $SGPID"
 <$SGDIR/npi-7.4.0 grep -c '@[ 	]*include' | sgsh-writeval  -s $SGDIR/NINCLUDE & SGPID="$! $SGPID"
 <$SGDIR/npi-7.5.0 grep -o -h '[0-9][x0-9][0-9a-f]*' | wc -l | sgsh-writeval  -s $SGDIR/NCONST & SGPID="$! $SGPID"
</dev/null  find "$@" -name \*.h -type f | wc -l | sgsh-writeval  -s $SGDIR/NHFILE & SGPID="$! $SGPID"
# Gather the results
cat <<EOF
FNAMELEN: `sgsh-readval -s $SGDIR/FNAMELEN`
NSTRUCT: `sgsh-readval -s $SGDIR/NSTRUCT`
NTYPEDEF: `sgsh-readval -s $SGDIR/NTYPEDEF`
IDLEN: `sgsh-readval -s $SGDIR/IDLEN`
CHLINESCHAR: `sgsh-readval -s $SGDIR/CHLINESCHAR`
NCCHAR: `sgsh-readval -s $SGDIR/NCCHAR`
NCOMMENT: `sgsh-readval -s $SGDIR/NCOMMENT`
NCOPYRIGHT: `sgsh-readval -s $SGDIR/NCOPYRIGHT`
NCFILE: `sgsh-readval -s $SGDIR/NCFILE`
NCDIR: `sgsh-readval -s $SGDIR/NCDIR`
CLINESCHAR: `sgsh-readval -s $SGDIR/CLINESCHAR`
NFUNCTION: `sgsh-readval -s $SGDIR/NFUNCTION`
NGOTO: `sgsh-readval -s $SGDIR/NGOTO`
NREGISTER: `sgsh-readval -s $SGDIR/NREGISTER`
NMACRO: `sgsh-readval -s $SGDIR/NMACRO`
NINCLUDE: `sgsh-readval -s $SGDIR/NINCLUDE`
NCONST: `sgsh-readval -s $SGDIR/NCONST`
NVOID: `sgsh-readval -s $SGDIR/NVOID`
NHFILE: `sgsh-readval -s $SGDIR/NHFILE`
NGETS: `sgsh-readval -s $SGDIR/NGETS`
EOF


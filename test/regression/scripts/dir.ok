FREE=`df -h . | awk '!/Use%/{print $4}'`

ls -n |
sgsh-tee  $SGDIR/npi-0.0.0 $SGDIR/npi-0.1.0 $SGDIR/npi-0.2.0 $SGDIR/npi-0.3.0 &
 <$SGDIR/npi-0.0.0 awk '!/^total/ {print $6, $7, $8, $1, sprintf("%8d", $5), $9}' >$SGDIR/npfo-files.0 &
 <$SGDIR/npi-0.1.0 wc -l | sgsh-writeval $SGDIR/NFILES &
 <$SGDIR/npi-0.2.0 grep -c '^d' | sgsh-writeval $SGDIR/NDIRS &
 <$SGDIR/npi-0.3.0 awk '{s += $5} END {print s}' | sgsh-writeval $SGDIR/NBYTES &
# Gather the results
	cat $SGDIR/npfo-files.0
	echo "               `sgsh-readval $SGDIR/NFILES` File(s) `sgsh-readval $SGDIR/NBYTES` bytes"
	echo "               `sgsh-readval $SGDIR/NDIRS` Dir(s) $FREE bytes free"


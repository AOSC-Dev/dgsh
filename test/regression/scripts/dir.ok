FREE=`df -h . | awk '!/Use%/{print $4}'`

ls -n |
teebuff  $SGDIR/npi-0.0.0 $SGDIR/npi-0.1.0 $SGDIR/npi-0.2.0 $SGDIR/npi-0.3.0 &
 <$SGDIR/npi-0.0.0 awk '!/^total/ {print $6, $7, $8, $1, sprintf("%8d", $5), $9}' >$SGDIR/npfo-files.0 &
 <$SGDIR/npi-0.1.0 wc -l >$SGDIR/npvo-NFILES &
 <$SGDIR/npi-0.2.0 grep '^d' | wc -l >$SGDIR/npvo-NDIRS &
 <$SGDIR/npi-0.3.0 awk '{s += $5} END {print s}' >$SGDIR/npvo-NBYTES &
# Gather the results
(
	echo "NBYTES='`cat $SGDIR/npvo-NBYTES`'" &
	echo "NDIRS='`cat $SGDIR/npvo-NDIRS`'" &
	echo "NFILES='`cat $SGDIR/npvo-NFILES`'" &
	wait
cat <<\SGEOFSG
	cat $SGDIR/npfo-files.0
	echo "               $NFILES File(s) $NBYTES bytes"
	echo "               $NDIRS Dir(s) $FREE bytes free"
SGEOFSG
) | /bin/sh -s "$@"


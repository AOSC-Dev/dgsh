#!/bin/sh
# Automatically generated file
# Source file example/dir.sh

export SGDIR=/tmp/sg-$$
rm -rf $SGDIR
trap 'sgsh-readval -q "$SGDIR/NFILES" 2>/dev/null
sgsh-readval -q "$SGDIR/NDIRS" 2>/dev/null
sgsh-readval -q "$SGDIR/NBYTES" 2>/dev/null
rm -rf "$SGDIR"' 0
trap 'exit $?' 1 2 3 15
mkdir $SGDIR

mkfifo  \
$SGDIR/npi-0.0.0 \
$SGDIR/npfo-files.0 \
$SGDIR/npi-0.1.0 \
$SGDIR/npi-0.2.0 \
$SGDIR/npi-0.3.0
#!/usr/local/bin/sgsh
#
# Windows-like DIR command for the current directory
# Nothing that couldn't be done with ls -l | awk
# Demonstrates combined use of variable assignment and file redirection

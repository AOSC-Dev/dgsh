#  WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.
#  See the License for the specific language governing permissions and
#  limitations under the License.
#

curl -s "$1" |
teebuff  $SGDIR/npi-0.0.0 $SGDIR/npi-0.1.0 $SGDIR/npi-0.2.0 $SGDIR/npi-0.3.0 $SGDIR/npi-0.4.0 &
 <$SGDIR/npi-0.0.0 wc -c >$SGDIR/npvo-NBYTES &
 <$SGDIR/npi-0.1.0 file - >$SGDIR/npvo-FILETYPE &
 <$SGDIR/npi-0.2.0 compress -c | wc -c >$SGDIR/npvo-COMPRESS &
 <$SGDIR/npi-0.3.0 bzip2 -c | wc -c >$SGDIR/npvo-BZIP2 &
 <$SGDIR/npi-0.4.0 gzip -c | wc -c >$SGDIR/npvo-GZIP &
# Gather the results
(
	echo "NBYTES='`cat $SGDIR/npvo-NBYTES`'" &
	echo "GZIP='`cat $SGDIR/npvo-GZIP`'" &
	echo "BZIP2='`cat $SGDIR/npvo-BZIP2`'" &
	echo "COMPRESS='`cat $SGDIR/npvo-COMPRESS`'" &
	echo "FILETYPE='`cat $SGDIR/npvo-FILETYPE`'" &
	wait
cat <<\SGEOFSG
	cat <<EOF
File URL:      $1
File type:     $FILETYPE
Original size: $NBYTES bytes
compress:      $COMPRESS bytes
gzip:          $GZIP bytes
bzip2:         $BZIP2 bytes
EOF
SGEOFSG
) | /bin/sh -s "$@"


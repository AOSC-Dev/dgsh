curl -s "$1" |
sgsh-tee  $SGDIR/npi-0.0.0 $SGDIR/npi-0.1.0 $SGDIR/npi-0.2.0 $SGDIR/npi-0.3.0 $SGDIR/npi-0.4.0 & SGPID="$! $SGPID"
 <$SGDIR/npi-0.0.0 wc -c | sgsh-writeval  -s $SGDIR/NBYTES & SGPID="$! $SGPID"
 <$SGDIR/npi-0.1.0 file - | sgsh-writeval  -s $SGDIR/FILETYPE & SGPID="$! $SGPID"
 <$SGDIR/npi-0.2.0 compress -c | wc -c | sgsh-writeval  -s $SGDIR/COMPRESS & SGPID="$! $SGPID"
 <$SGDIR/npi-0.3.0 bzip2 -c | wc -c | sgsh-writeval  -s $SGDIR/BZIP2 & SGPID="$! $SGPID"
 <$SGDIR/npi-0.4.0 gzip -c | wc -c | sgsh-writeval  -s $SGDIR/GZIP & SGPID="$! $SGPID"
# Gather the results
	cat <<EOF
File URL:      $1
File type:     `sgsh-readval -s $SGDIR/FILETYPE`
Original size: `sgsh-readval -s $SGDIR/NBYTES` bytes
compress:      `sgsh-readval -s $SGDIR/COMPRESS` bytes
gzip:          `sgsh-readval -s $SGDIR/GZIP` bytes
bzip2:         `sgsh-readval -s $SGDIR/BZIP2` bytes
EOF


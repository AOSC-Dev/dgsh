curl -s "$1" |
sgsh-tee  $SGDIR/npi-0.0.0 $SGDIR/npi-0.1.0 $SGDIR/npi-0.2.0 $SGDIR/npi-0.3.0 $SGDIR/npi-0.4.0 &
 <$SGDIR/npi-0.0.0 wc -c | sgsh-writeval $SGDIR/NBYTES &
 <$SGDIR/npi-0.1.0 file - | sgsh-writeval $SGDIR/FILETYPE &
 <$SGDIR/npi-0.2.0 compress -c | wc -c | sgsh-writeval $SGDIR/COMPRESS &
 <$SGDIR/npi-0.3.0 bzip2 -c | wc -c | sgsh-writeval $SGDIR/BZIP2 &
 <$SGDIR/npi-0.4.0 gzip -c | wc -c | sgsh-writeval $SGDIR/GZIP &
# Gather the results
	cat <<EOF
File URL:      $1
File type:     `sgsh-readval $SGDIR/FILETYPE`
Original size: `sgsh-readval $SGDIR/NBYTES` bytes
compress:      `sgsh-readval $SGDIR/COMPRESS` bytes
gzip:          `sgsh-readval $SGDIR/GZIP` bytes
bzip2:         `sgsh-readval $SGDIR/BZIP2` bytes
EOF


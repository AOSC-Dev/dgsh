#!/bin/sh
# Automatically generated file
# Source file example/compress-compare.sh

export SGDIR=/tmp/sg-$$
rm -rf $SGDIR
trap 'rm -rf "$SGDIR"' 0
trap 'exit $?' 1 2 3 15
mkdir $SGDIR

mkfifo  \
$SGDIR/npi-0.0.0 \
$SGDIR/npvo-NBYTES \
$SGDIR/npi-0.1.0 \
$SGDIR/npvo-FILETYPE \
$SGDIR/npi-0.2.0 \
$SGDIR/npvo-COMPRESS \
$SGDIR/npi-0.3.0 \
$SGDIR/npvo-BZIP2 \
$SGDIR/npi-0.4.0 \
$SGDIR/npvo-GZIP
#!/usr/local/bin/sgsh
#
# Report file type, length, and compression performance for a
# URL retrieved from the web.  The web file never touched the
# disk.
